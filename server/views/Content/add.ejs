<div class="row">
    <div class="offset-md-3 col-md-6">
        <h1><%= title %> business contact</h1>
        <form method="POST" class="form">
            <div class="form-group">
                <label for="">Contact's First Name</label>
                <input type="text" class="form-control"
                id="firstNameTextField"
                placeholder="Enter the Contact's First Name"
                name="firstname" required>
            </div>
            <div class="form-group">
                <label for="">Contacts's Last Name</label>
                <input type="text" class="form-control"
                id="lastNameTextField"
                placeholder="Enter the Contact's Last Name"
                name="lastname" required>
            </div>
            <div class="form-group">
                <label for="">Contact's Phone</label>
                <input type="number" class="form-control"
                id="phoneTextField"
                placeholder="Enter the Contact's Field"
                name="phone" required>
            </div>
            <div class="form-group">
                <label for="">Contact's Email</label>
                <textarea type="text" class="form-control"
                id="emailTextArea"
                placeholder="Enter the Contact's Email"
                name="email" required></textarea>
            </div>
            <div class="form-group">
                <label for="">Blood Group</label>
                <input type="text" class="form-control"
                id="bloodgroupTextField"
                placeholder="Enter the Contact's blood group"
                name="bloodgroup" required>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-edit"></i> Submit
            </button>
            <a href="/contacts" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel</a>
        </form>
    </div>
</div>