<div class="row">
    <div class="col">
    <header><h1>Famous <%= title %></h1></header>
    <% if(displayName) { %>
        <a href="/scientist/add" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-circle"></i> Add Scientist</a>
    <% } %>
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Email</th>
                <th scope="col">Blood Group</th>
                <% if(displayName) { %>
                <th>Edit</th>
                <th>Delete</th>
                <% } %>
            </tr>
        </thead>
        <tbody>

            <!-- Sorting Scientists by First Name using EJS-->
            <% for(let x = 0; x < scientist.length; x++) { %>
            <%      for (let j = 0; j < scientist.length -1; j++) { %>
            <%          if (scientist[j].firstname > scientist[j + 1].firstname) { %>
            <%              let temp = scientist[j]; %>
            <%              scientist[j] = scientist[j + 1]; %>
            <%              scientist[j + 1] = temp; %>
            <%  }}} %>

            <!-- Repeatable Row Template -->   

            <% for(let count = 0; count < scientist.length; count++) { %>
            
            <tr>
                <th scope="row"><%= count + 1 %></th>
                <td><%= scientist[count].firstname %></td>
                <td><%= scientist[count].lastname %></td>
                <td><%= scientist[count].phone %></td>
                <td><%= scientist[count].email %></td>
                <td><%= scientist[count].bloodgroup %></td>
                <% if(displayName) { %>
                    <td class="text-center"><a href="/scientist/edit/<%= scientist[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i> Edit </a></td>
                    <td class="text-center"><a href="/scientist/delete/<%= scientist[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt fa-sm"></i> Delete</a></td>
                <% } %>
            </tr>
            <% } %>

        </tbody>
    </table>
</div>